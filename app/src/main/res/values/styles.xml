<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Base Styles  -->
    <style name="h1">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginVertical">20dp</item>
    </style>
    <style name="h2">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginVertical">12dp</item>
    </style>
    <style name="p">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>
    <style name="btn">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginVertical">20dp</item>
    </style>
    <style name="linear_layout">
        <item name="android:padding">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--  Additional Styles  -->
    <style name="questionNum">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="score_box">
        <item name="android:textSize">16dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginVertical">15dp</item>
        <item name="android:background">@drawable/rounded_corner_view</item>
        <item name="android:backgroundTint">@color/light_purple</item>
    </style>
</resources>